{
  "name": "@astro-paper/cli",
  "version": "0.0.1",
  "description": "A comprehensive CLI tool for AstroPaper theme",
  "type": "module",
  "bin": {
    "astro-paper": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "link-cli": "npm unlink @astro-paper/cli && npm link",
    "postinstall": "chmod +x dist/index.js",
    "reset": "rm -rf dist && npm run build && npm run postinstall",
    "cleanup": "rm -rf dist && npm run build && npm run link-cli && npm run postinstall",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "astro",
    "blog",
    "cli",
    "theme",
    "astropaper",
    "static-site",
    "markdown"
  ],
  "author": "satnaing",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^6.6.0",
    "@types/node": "^24.0.4",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "prettier": "3.6.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0"
  },
  "dependencies": {
    "commander": "^14.0.0"
  }
}
